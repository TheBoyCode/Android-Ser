<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/scorebg"
    android:orientation="horizontal"
    tools:context=".CheckPoint"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPointName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/round"
            android:text="Код точки"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextPointname"
            app:layout_constraintEnd_toEndOf="@+id/editTextPointname"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextPointname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/round"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnOkPoint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPointName" />

        <Button
            android:id="@+id/btnOkPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="91dp"
            android:background="@drawable/round"
            android:onClick="Click_OK"
            android:text="OK"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPointname" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>