<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/scorebg"
    android:orientation="horizontal"
    tools:context=".DeleteForm"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="Номер питання"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="543dp"
            tools:layout_editor_absoluteY="58dp" />

        <EditText
            android:id="@+id/edittext_nameText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="498dp"
            tools:layout_editor_absoluteY="122dp" />

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="307dp"
            tools:layout_editor_absoluteY="223dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:onClick="Click_Back"
                android:text="Назад"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="185dp"
                tools:layout_editor_absoluteY="261dp" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:onClick="Click_Delete"
                android:text="Видалити"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="426dp"
                tools:layout_editor_absoluteY="269dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>